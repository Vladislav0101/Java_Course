import java.util.Scanner;
public class Learn {
    public static void main(String[] args) {
        System.out.print("Введите целое положительное число num: ");
        Scanner scan = new Scanner(System.in);
        int num = scan.nextInt();
        int sum = 0;
        for (int i = 1; i <= num; i++){
            sum = sum + i;
        }
        System.out.println("Сумма целых положительных чисел от 1 до num равна " + sum);
    }
}


